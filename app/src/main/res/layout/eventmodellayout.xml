<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:backgroundTint="#F4DFF6"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title, secondary and supporting text -->
            <TextView
                android:id="@+id/eventNameTV"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Train and Track Event"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="#F44336"
                android:textStyle="normal|bold|italic" />

            <TextView
                android:id="@+id/neweventLocationET"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Location: Art centre, Maryville"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/eventDateTV"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="Date: Saturday "
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/eveTimeTV"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Time: 4:00 P.M (Weekly)"
                android:textColor="#050505" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>